Package: gasper
Type: Package
Title: Graph Signal Processing
Version: 1.0.0.9000
Authors@R: c(person("Fabien", "Navarro", role = c("aut", "cre"), 
                    email = "fabien.navarro@math.cnrs.fr"), 
             person("Basile", "De Loynes", role = "aut", 
                    email = "basile.deloynes@ensai.fr"), 
